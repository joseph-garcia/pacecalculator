<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/entryRecyclerMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


    </androidx.recyclerview.widget.RecyclerView>

    <TextView
            android:id="@+id/emptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_view_tap_the"
            app:drawableTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/hamburgerImage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/entryRecyclerMenu"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/hamburgerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:tint="#7E7E7E"
            app:layout_constraintBottom_toBottomOf="@+id/emptyText"
            app:layout_constraintEnd_toStartOf="@+id/emptyText2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/emptyText"
            app:layout_constraintTop_toTopOf="@+id/emptyText"
            app:srcCompat="@drawable/ic_hamburger"
            android:contentDescription="@string/entry_view_hamburger_menu_content_desc"/>

    <TextView
            android:id="@+id/emptyText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entry_view_to_add_entry"
            app:drawableTint="#212121"
            app:layout_constraintBottom_toBottomOf="@+id/hamburgerImage"
            app:layout_constraintEnd_toStartOf="@+id/entryRecyclerMenu"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/hamburgerImage"
            app:layout_constraintTop_toTopOf="@+id/hamburgerImage" />


</androidx.constraintlayout.widget.ConstraintLayout>