<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PACE CALCULATOR"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="32sp" android:id="@+id/textView3" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.427"/>
    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.475"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Distance" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/numberpicker_main_minutes"
            app:layout_constraintHorizontal_bias="0.468"/>
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_hours"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="44dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView4"></NumberPicker>
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_minutes"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="164dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView5"></NumberPicker>
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_miles"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintHorizontal_bias="0.477"
                  app:layout_constraintTop_toBottomOf="@+id/Distance"
    ></NumberPicker>
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_seconds"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="268dp"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"></NumberPicker>
    <Button
            android:text="Calculate Pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculateBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.468" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberpicker_main_miles"/>
    <TextView
            android:text="Hours"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView6" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>

</androidx.constraintlayout.widget.ConstraintLayout>