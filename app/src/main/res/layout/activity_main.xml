<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PACE CALCULATOR"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.084"
            android:textSize="32sp" android:id="@+id/textView3"/>
    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="40dp"/>
    <TextView
            android:text="Miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Distance" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/numberpicker_main_minutes"
    />
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_hours" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView4"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="52dp"></NumberPicker>
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_minutes"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="172dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView5"></NumberPicker>
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_miles"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintHorizontal_bias="0.498"
                  app:layout_constraintTop_toBottomOf="@+id/Distance" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/calculateBtn"
                  app:layout_constraintVertical_bias="0.358"></NumberPicker>
    <NumberPicker android:layout_width="64dp" android:layout_height="177dp"
                  android:id="@+id/numberpicker_main_seconds"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="292dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView6"></NumberPicker>
    <Button
            android:text="Calculate Pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculateBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Hours"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:id="@+id/textView4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"/>
    <TextView
            android:text="Minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView6"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.448"/>
    <TextView
            android:text="Seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>