<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true"
        android:background="@drawable/gradient_bg"
        tools:context=".MainActivity"
        tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp">

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu">
    </android.support.design.widget.NavigationView>


    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="405dp"
            android:layout_height="525dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/calculateBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.629"
            app:srcCompat="@drawable/roundedsquare"
            tools:visibility="visible" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="PACE CALCULATOR"
            android:textColor="#EEEEEE"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:text="Time"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
            android:id="@+id/Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Miles"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/numberpicker_main_minutes" />

    <NumberPicker
            android:id="@+id/numberpicker_main_hours"
            android:layout_width="64dp"
            android:layout_height="177dp"
            android:theme="@style/AppTheme.Picker"
            app:layout_constraintBottom_toBottomOf="@+id/numberpicker_main_minutes"
            app:layout_constraintEnd_toStartOf="@+id/numberpicker_main_minutes"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numberpicker_main_minutes"></NumberPicker>

    <NumberPicker
            android:id="@+id/numberpicker_main_minutes"
            android:layout_width="64dp"
            android:layout_height="177dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:theme="@style/AppTheme.Picker"
            app:layout_constraintBottom_toBottomOf="@+id/numberpicker_main_seconds"
            app:layout_constraintEnd_toStartOf="@+id/numberpicker_main_seconds"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/numberpicker_main_hours"
            app:layout_constraintTop_toTopOf="@+id/numberpicker_main_seconds"></NumberPicker>

    <NumberPicker
            android:id="@+id/numberpicker_main_miles"
            android:layout_width="64dp"
            android:layout_height="177dp"
            android:theme="@style/AppTheme.Picker"
            app:layout_constraintBottom_toBottomOf="@+id/numberpicker_main_milesTens"
            app:layout_constraintEnd_toStartOf="@+id/numberpicker_main_milesTens"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numberpicker_main_milesTens"></NumberPicker>

    <NumberPicker
            android:id="@+id/numberpicker_main_milesTens"
            android:layout_width="64dp"
            android:layout_height="177dp"
            android:theme="@style/AppTheme.Picker"
            app:layout_constraintBottom_toBottomOf="@+id/numberpicker_main_milesOnes"
            app:layout_constraintEnd_toStartOf="@+id/numberpicker_main_milesOnes"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/numberpicker_main_miles"
            app:layout_constraintTop_toTopOf="@+id/numberpicker_main_milesOnes"></NumberPicker>

    <NumberPicker
            android:id="@+id/numberpicker_main_milesOnes"
            android:layout_width="64dp"
            android:layout_height="177dp"
            android:layout_marginTop="10dp"
            android:theme="@style/AppTheme.Picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/numberpicker_main_milesTens"
            app:layout_constraintTop_toBottomOf="@+id/Distance"></NumberPicker>

    <NumberPicker
            android:id="@+id/numberpicker_main_seconds"
            android:layout_width="64dp"
            android:layout_height="177dp"
            android:layout_marginTop="10dp"
            android:theme="@style/AppTheme.Picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/numberpicker_main_minutes"
            app:layout_constraintTop_toBottomOf="@+id/secondText"></NumberPicker>

    <Button
            android:id="@+id/calculateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="Calculate Pace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textColor="@android:color/black"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="@+id/numberpicker_main_miles"
            app:layout_constraintEnd_toStartOf="@+id/numberpicker_main_milesTens"
            app:layout_constraintStart_toEndOf="@+id/numberpicker_main_miles"
            app:layout_constraintTop_toTopOf="@+id/numberpicker_main_miles"
            app:layout_constraintVertical_bias="0.55" />

    <TextView
            android:id="@+id/hoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hours"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/minuteText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
            android:id="@+id/minuteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:text="Minutes"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/hoursText"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/hoursText" />

    <TextView
            android:id="@+id/secondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seconds"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/minuteText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/minuteText"
            app:layout_constraintTop_toTopOf="@+id/minuteText" />

</androidx.constraintlayout.widget.DrawerLayout>